{
  "states": ["initial", "hold", "chase"],
  "start": "initial",

  "initial": {
    "onTime": {
      "time": 0,
      "transition": {
        "state": "hold",
        "action": {"type": "stop"}
      }
    }
  },

  "hold": {
    "onHit": {
      "transition": {
        "state": "chase",
        "action": {"type": "begin chase"}
      }
    }
  },

  "chase": {
    "onTime": {
      "time": 5,
      "time_parameter": "chase_duration",
      "transition": {
        "state": "hold",
        "actions": [{"type": "end chase"}, {"type": "stop"}]
      }
    }
  }
}
