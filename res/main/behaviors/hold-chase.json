{
  "states": ["initial", "hold", "chase"],
  "start": "initial",

  "initial": {
    "onTime": {
      "time": 0,
      "transition": {
        "state": "hold",
        "action": "stop"
      }
    }
  },

  "hold": {
    "onHit": {
      "transition": {
        "state": "chase",
        "action": "begin chase"
      }
    }
  },

  "chase": {
    "onTime": {
      "time": 5,
      "time_parameter": "chase_duration",
      "transition": {
        "state": "hold",
        "actions": ["end chase", "stop"]
      }
    }
  }
}
