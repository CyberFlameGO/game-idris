{
  "initial": {
    "onTime": {
      "time": 0,
      "transition": {
        "state": "roam",
        "action": "move left"
      }
    }
  },

  "roam": {
    "onTime": {
      "time": 3,
      "transition": {
        "state": "roam",
        "action": "change direction"
      }
    },

    "onCollision": {
      "transition": {
        "state": "chase"
      }
    }
  },

  "chase": {
    "onTime": {
      "time": 10,
      "transition": {
        "state": "roam"
      }
    },

    "onCollision": {
      "transition": {
        "state": "chase",
        "action": "attack"
      }
    }
  }
}
