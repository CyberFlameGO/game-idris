{
  "states": ["before", "intermediate", "after", "garbage"],
  "start": "before",
  "end": "garbage",

  "before": {
    "onCollision": {
      "transition": {
        "state": "intermediate",
        "action": {"type": "projectile damage"}
      }
    }
  },

  "intermediate": {
    "onTime": {
      "time": 0.3,
      "transition": {
        "state": "after",
        "action": {"type": "unset mask bits", "maskBits": ["projectile", "animate"]}
      }
    }
  },

  "after": {
    "onTime": {
      "time": 4.7,
      "time_parameter": "garbage time",
      "transition": {
        "state": "garbage"
      }
    }
  },

  "garbage": {}
}
