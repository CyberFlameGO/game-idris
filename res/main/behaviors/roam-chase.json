{
  "states": ["initial", "roam", "chase"],
  "start": "initial",

  "initial": {
    "onTime": {
      "time": 0,
      "transition": {
        "state": "roam",
        "actions": ["move left", "begin walk"]
      }
    }
  },

  "roam": {
    "onTime": {
      "time": 3,
      "time_parameter": "roam_duration",
      "transition": {
        "state": "roam",
        "action": "change direction"
      }
    },

    "onHit": {
      "transition": {
        "state": "chase",
        "actions": ["begin chase", "end walk"]
      }
    }
  },

  "chase": {
    "onTime": {
      "time": 5,
      "time_parameter": "chase_duration",
      "transition": {
        "state": "roam",
        "actions": ["end chase", "stop", "begin walk"]
      }
    }
  }
}
